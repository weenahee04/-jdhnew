{
  "name": "jdh-wallet-api",
  "version": "1.0.0",
  "description": "Production-ready Crypto Wallet API integration layer",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
